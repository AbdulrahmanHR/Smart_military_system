# =============================================================================
# MILITARY TRAINING CHATBOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values below
# Never commit .env files to version control!

# =============================================================================
# üîë REQUIRED API CONFIGURATION
# =============================================================================

# Google AI Studio API Key (REQUIRED)
# Get your API key from: https://makersuite.google.com/app/apikey
# This is required for the Google Gemini 2.5 Flash LLM integration
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# ü§ñ LLM MODEL CONFIGURATION (Optional)
# =============================================================================

# Google Gemini model version to use
# Options: gemini-1.5-flash, gemini-1.5-pro, gemini-pro
LLM_MODEL=gemini-1.5-flash

# LLM response temperature (0.0 = deterministic, 1.0 = creative)
# For military training, lower values (0.2-0.4) are recommended for consistency
TEMPERATURE=0.3

# Maximum tokens for LLM responses
# Higher values allow longer responses but cost more
MAX_TOKENS=1024

# =============================================================================
# üóÇÔ∏è DOCUMENT PROCESSING CONFIGURATION (Optional)
# =============================================================================

# Size of document chunks for processing (in characters)
# Larger chunks = more context but slower processing
# Recommended: 300-800 for technical documents
CHUNK_SIZE=500

# Overlap between document chunks (in characters)
# Helps maintain context across chunk boundaries
# Recommended: 10-20% of chunk size
CHUNK_OVERLAP=100

# Number of document chunks to retrieve for each query
# More chunks = better context but slower responses
# Recommended: 3-7 for most use cases
RETRIEVAL_K=5

# =============================================================================
# üîç EMBEDDING MODEL CONFIGURATION (Optional)
# =============================================================================

# Sentence transformer model for document embeddings
# Options: all-MiniLM-L6-v2 (fast), all-mpnet-base-v2 (better quality)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION (Optional)
# =============================================================================

# Chroma vector database collection name
COLLECTION_NAME=military_training_docs

# Custom path for vector database storage (optional)
# If not set, uses default: data/vector_db/
# PERSIST_DIRECTORY=/custom/path/to/vector_db

# =============================================================================
# üñ•Ô∏è STREAMLIT UI CONFIGURATION (Optional)
# =============================================================================

# Application title shown in browser tab
PAGE_TITLE=Military Training Assistant

# Emoji icon for the application
PAGE_ICON=‚öîÔ∏è

# Streamlit layout: "centered" or "wide"
LAYOUT=wide

# Custom port for Streamlit (default: 8501)
# PORT=8501

# =============================================================================
# üìÅ CUSTOM PATHS (Optional)
# =============================================================================

# Custom directory for training documents
# If not set, uses default: data/documents/
# DOCUMENTS_DIR=/custom/path/to/documents

# Custom directory for data storage
# If not set, uses default: data/
# DATA_DIR=/custom/path/to/data

# =============================================================================
# üîß ADVANCED CONFIGURATION (Optional)
# =============================================================================

# Enable debug logging (true/false)
# Useful for troubleshooting but generates more logs
DEBUG=false

# Custom log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# API request timeout (in seconds)
# Increase if you experience timeout errors
API_TIMEOUT=30

# Maximum file size for document uploads (in MB)
MAX_UPLOAD_SIZE=10

# Enable/disable anonymous usage analytics (true/false)
ENABLE_ANALYTICS=false

# =============================================================================
# üõ°Ô∏è SECURITY CONFIGURATION (Optional)
# =============================================================================

# Enable basic authentication (true/false)
# If enabled, users must enter username/password
ENABLE_AUTH=false

# Basic auth username (only if ENABLE_AUTH=true)
# AUTH_USERNAME=admin

# Basic auth password (only if ENABLE_AUTH=true)
# AUTH_PASSWORD=secure_password

# =============================================================================
# üåê DEPLOYMENT CONFIGURATION (Optional)
# =============================================================================

# Environment type: development, staging, production
ENVIRONMENT=development

# Application host (for production deployment)
# HOST=0.0.0.0

# Enable HTTPS (true/false)
# ENABLE_HTTPS=false

# SSL certificate path (only if ENABLE_HTTPS=true)
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_KEY_PATH=/path/to/private_key.pem

# =============================================================================
# üìä MONITORING CONFIGURATION (Optional)
# =============================================================================

# Enable performance monitoring (true/false)
ENABLE_MONITORING=false

# Custom metrics endpoint (if monitoring enabled)
# METRICS_ENDPOINT=http://localhost:9090/metrics

# =============================================================================
# üíæ BACKUP CONFIGURATION (Optional)
# =============================================================================

# Enable automatic database backups (true/false)
ENABLE_BACKUPS=false

# Backup frequency in hours (only if ENABLE_BACKUPS=true)
# BACKUP_FREQUENCY=24

# Backup directory (only if ENABLE_BACKUPS=true)
# BACKUP_DIR=/path/to/backups

# =============================================================================
# EXAMPLE VALUES FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# DEVELOPMENT EXAMPLE:
# GOOGLE_API_KEY=your_dev_api_key
# TEMPERATURE=0.5
# DEBUG=true
# LOG_LEVEL=DEBUG

# PRODUCTION EXAMPLE:
# GOOGLE_API_KEY=your_prod_api_key
# TEMPERATURE=0.2
# MAX_TOKENS=512
# ENVIRONMENT=production
# ENABLE_MONITORING=true
# ENABLE_BACKUPS=true

# HIGH-PERFORMANCE EXAMPLE:
# CHUNK_SIZE=800
# RETRIEVAL_K=7
# EMBEDDING_MODEL=all-mpnet-base-v2
# MAX_TOKENS=2048

# RESOURCE-CONSTRAINED EXAMPLE:
# CHUNK_SIZE=300
# RETRIEVAL_K=3
# MAX_TOKENS=512
# EMBEDDING_MODEL=all-MiniLM-L6-v2
